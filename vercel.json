{
  "buildCommand": "npm run build --workspace=client",
  "installCommand": "npm install",
  "outputDirectory": "client/dist",
  "public": true,
  "framework": "vite",
  "env": {
    "VITE_API_URL": "https://medical-kiosk-backend.onrender.com"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Content-Type", "value": "application/json" }
      ]
    }
  ]
}
